  top: -25rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #fff;
  padding: 0 20rpx;
}
.skill::before {
  content: '职业技能';
}

.edu::before {
  content: '教育经历';
}
.evaluate::before {
  content: '自我评价';
}
.work::before {
